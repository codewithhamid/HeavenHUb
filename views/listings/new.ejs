<% layout("/layouts/boilerplate")%>
<body>
  <h3>Create a New Listing</h3>
  <form method="POST" action="/listings">
    <div class="mb-3">
      <label for="title" class="form-lebel">Title:</label>
      <input
        name="listing[title]"
        placeholder="enter title"
        type="text"
        class="form-control"
        required
      />
    </div>
    <div class="mb-3" >
      <label for="description" class="form-lebel">Description</label>
      <textarea
        name="listing[description]"
        placeholder="enter description"
        class="form-control"
        required
      ></textarea>
    </div>
    <div class="mb-3">
      <label for="image" class="form-lebel">Image Link</label>

      <input
        name="listing[image]"
        placeholder="enter image URL/Link"
        type="text"
        class="form-control"
      />
    </div>
    <div class="mb-3">
      <label for="price" class="form-lebel">Price</label>
      <input name="listing[price]" placeholder="enter price" type="number"class="form-control" required />
    </div>

    <div class="mb-3">
      <label for="Country" class="form-lebel">Country</label>
      <input name="listing[country]" placeholder="enter country" type="text" class="form-control" />
    </div>
    
    <div class="mb-3">
      <label for="location" class="form-lebel">Location</label>
      <input name="listing[location]" placeholder="enter location" type="text"  class="form-control"/>
    </div>
    
    <button class="btn btn-dark">Add</button>
  </form>
</body>
